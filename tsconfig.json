{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@api/*": ["./src/app/api/*"],
      "@assets/*": ["./src/app/assets/*"],
      "@components/*": ["./src/app/components/*"],
      "@services/*": ["./src/app/services/*"],
      "@context/*": ["./src/app/context/*"],
      "@views/*": ["./src/app/views/*"]    
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/app/types.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
